options(
    radian.auto_indentation = TRUE,
    radian.auto_match = FALSE,
    radian.auto_suggest = FALSE,
    radian.auto_width = TRUE,
    radian.color_scheme = "default",
    radian.complete_while_typing = FALSE,
    radian.editing_mode = "vi",
    radian.enable_reticulate_prompt = FALSE,
    radian.highlight_matching_bracket = FALSE,
    radian.indent_lines = FALSE,
    radian.insert_new_line = TRUE,
    radian.prompt = "> ",
    radian.shell_prompt = "$ ",
    radian.show_vi_mode_prompt = FALSE,
    radian.tab_size = 4
