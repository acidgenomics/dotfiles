{{- if stat (joinPath .chezmoi.homeDir ".local" "share" "ca-certificates" "cacert.pem") }}
cacert={{ .chezmoi.homeDir }}/.local/share/ca-certificates/cacert.pem
{{- else if and (eq .chezmoi.os "linux") (stat "/etc/ssl/certs/ca-certificates.crt") }}
cacert=/etc/ssl/certs/ca-certificates.crt
{{- end }}
connect-timeout=60
# > insecure
location
{{- if env "HTTP_PROXY" }}
proxy={{ env "HTTP_PROXY" }}
{{- end }}
referer=";auto"
show-error
